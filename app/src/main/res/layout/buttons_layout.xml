<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:columnCount="4"
        app:rowCount="5">

        <Button
            android:id="@+id/button_c"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="C"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textColorLink="#656565"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_del"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:width="60dp"
            android:height="60dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppins"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layoutDirection="inherit"
            android:textColorLink="#656565"
            app:icon="@drawable/ic_del"
            app:iconPadding="0dp"
            app:iconSize="16dp"
            app:iconTint="@color/blue" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="%"
            android:textColor="@color/orange"
            android:textColorLink="#656565"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="รท"
            android:textColor="@color/orange"
            android:textColorLink="#656565"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_seven"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="7"
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_eight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="8"
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_nine"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="9"
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_equis"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="ร"
            android:textColor="@color/orange"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_cuatro"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="4"
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_cinco"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="5"
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_seis"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="6"
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="-"
            android:textColor="@color/orange"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_one"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="1"
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_two"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="2"
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="3"
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="+"
            android:textColor="@color/orange"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="."
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_zero"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="0"
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_doublezero"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/poppins"
            android:text="@string/double_zero"
            android:textColor="@color/grey"
            android:textColorLink="#656565"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="24px"
            android:backgroundTint="@color/orange"
            android:fontFamily="@font/poppins_bold"
            android:text="="
            android:textColor="@color/white"
            android:textColorLink="#656565"
            android:textSize="20sp" />
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>